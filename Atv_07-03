let data = new Date();

function obterDataAtual() {
console.log(`${data.getDate()} / 0${data.getMonth() + 1} / ${data.getFullYear()}`) 

}

obterDataAtual()*/


/*
1. Obter Hora Atual: Desenvolva uma função obterHoraAtual() que retorne a hora atual no formato HH:MM:SS.


let data = new Date();

