// 1. Manipulação de Datas e Horas:
// Obter Data Atual: Crie uma função obterDataAtual() que retorne a data atual no formato DD/MM/AAAA.


// Cria uma nova instância do objeto Date, que armazena a data e hora atuais.
let data = new Date();

// Função para formatar e retornar a data no formato brasileiro (dd/mm/aaaa)
function obterDataAtual(data) {
    // O método toLocaleDateString com o parâmetro "pt-BR" retorna a data formatada em português
    return (data.toLocaleDateString("pt-BR"));
}

// Exibe a data formatada no console
console.log(obterDataAtual(data));


